{
    "name": "phlib/console-process",
    "type": "library",
    "description": "Console implementation.",
    "keywords": ["symfony", "console", "daemon", "background", "pcntl", "posix"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Luke Richards"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/console-process/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pcntl" : "*",
        "ext-posix" : "*",
        "symfony/console": "^5 || ^6 || ^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "php-mock/php-mock-phpunit": "^2",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\ConsoleProcess\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\ConsoleProcess\\": "tests/"
       }
    },
    "scripts": {
        "cs-check": "vendor/bin/ecs",
        "cs-fix": "vendor/bin/ecs --fix"
    }
}
